{
  "name": "@shared/react-native-test-features",
  "version": "0.1.0",
  "description": "A package for testing React Native features",
  "source": "./src/index",
  "main": "./dist/index",
  "module": "./dist/index",
  "react-native": "./src/index",
  "files": [
    "src",
    "dist"
  ],
   "scripts": {
    "build": "tsup --env.NODE_ENV production",
    "test": "jest",
    "lint": "eslint \"**/*.{js,ts,tsx}\"",
    "clean": "rm -rf dist",
    "dev": "tsup --watch src",
    "ignite:screen": "echo 'Enter your screen name:' && read name && npx ignite-cli@latest g screen $name"
  },

  "type": "module",
  "private": true,
  "devDependencies": {
    "@types/bun": "latest",
    "@react-native/eslint-config": "0.81.1",
    "@react-navigation/native": "7.1.17",
    "@react-navigation/native-stack": "7.3.26",
    "@types/jest": "30.0.0",
    "@types/react": "^19.1.13",
    "eslint": "9.35.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-plugin-prettier": "5.5.4",
    "jest": "30.1.3",
    "prettier": "3.6.2",
    "react": "19.1.1",
    "react-native": "0.81.4",
    "react-native-gesture-handler": "2.28.0",
    "react-native-nitro-modules": "0.29.6",
    "react-native-reanimated": "4.1.0",
    "react-native-safe-area-context": "5.6.1",
    "react-native-screens": "4.16.0",
    "react-native-vision-camera": "4.7.2",
    "react-native-worklets-core": "1.6.2",
    "reactotron-core-client": "2.9.7",
    "reactotron-react-native": "5.1.6",
    "reactotron-react-native-mmkv": "0.2.8",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
    
  },
  "resolutions": {
    "@types/react": "^19.1.13"
  },

  "peerDependencies": {
    "@react-navigation/native": "*",
    "@react-navigation/native-stack": "*",
    "axios": "*",
    "mobx": "*",
    "mobx-react-lite": "*",
    "mobx-state-tree": "*",
    "react": "*",
    "react-native": "*",
    "react-native-device-info": "*",
    "react-native-gesture-handler": "*",
    "react-native-keychain": "*",
    "react-native-nitro-modules": "*",
    "react-native-reanimated": "*",
    "react-native-safe-area-context": "*",
    "react-native-screens": "*",
    "react-native-svg": "*",
    "react-native-vision-camera": "*",
    "react-native-worklets-core": "*"
  },
  "packageManager": "bun@1.2.0",
  "eslintConfig": {
    "root": true,
    "extends": [
      "@react-native",
      "prettier"
    ],
    "rules": {
      "react/react-in-jsx-scope": "off",
      "prettier/prettier": [
        "error",
        {
          "quoteProps": "consistent",
          "singleQuote": true,
          "tabWidth": 2,
          "trailingComma": "es5",
          "useTabs": false
        }
      ]
    }
  },
  "eslintIgnore": [
    "node_modules/",
    "dist/"
  ],
  "prettier": {
    "quoteProps": "consistent",
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "useTabs": false
  }
}
